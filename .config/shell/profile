# XDG
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

# Change default config and data directories of these programs
export LEIN_HOME="$XDG_DATA_HOME"/lein
export CARGO_HOME="$XDG_DATA_HOME"/cargo
export GTK_RC_FILES="$XDG_CONFIG_HOME"/gtk-1.0/gtkrc
export GTK2_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/gtkrc
export PASSWORD_STORE_DIR="$XDG_DATA_HOME"/pass
export WGETRC="$XDG_CONFIG_HOME/wgetrc"
export WINEPREFIX="$XDG_DATA_HOME"/wineprefixes/default
export GNUPGHOME="$XDG_DATA_HOME"/gnupg
export XAUTHORITY="$XDG_RUNTIME_DIR"/Xauthority

export GTK_IM_MODULE='ibus'
export QT_IM_MODULE='ibus'
export XMODIFIERS=@im='ibus'

# Environment Variables
export ZDOTDIR="$HOME/.config/zsh"
export EDITOR=nvim
export TERMINAL=st
export BROWSER=brave-browser
export HISTCONTROL=ignoreboth
export MANROFFOPT='-c'
export FZF_DEFAULT_OPTS="--layout=reverse --height=2%"

if [ "$(command -v bat)" ]; then
  export MANPAGER="sh -c 'col -bx | bat -l man -p'"
elif [ "$(command -v batcat)" ]; then
  alias bat="batcat"
  export MANPAGER="sh -c 'col -bx | batcat -l man -p'"
fi

export DOTFILESDIR="$HOME/.dotfiles"
export LC_ALL=en_US.UTF-8
export GTK_THEME=Adwaita:dark
export LIBVIRT_DEFAULT_URI="qemu:///system"
export VIRSH_DEFAULT_CONNECT_URI="qemu:///system"
export MAILCHECK=""

export PATH="$PATH:/usr/sbin:$HOME/.local/bin:$DOTFILESDIR/bin"

export MAKEFLAGS=-j$(($(nproc)-1))

export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"

alias ls='ls --color=auto'
alias la='ls -Alh'

alias gd='git diff'
alias gs='git status'

alias g='grep --color -E'
alias gi='grep --color -Ei'

alias e=editor.sh
alias pac='sudo pacman'
alias sa='sudo apt'
alias a='apt'
alias rn='ranger'
alias clear='echo Use C-l'
alias rm='echo Do not use rm use trash -- '
alias tra='trash'
alias restow='cd "$DOTFILESDIR" && stow -S . -t "$HOME"'
alias ansi-local='ansible-playbook --connection=local -i "localhost,"'
alias exit='if [ -z "$TMUX" ]; then builtin exit; else echo "Use tmux to kill or quit the terminal"; fi'

# Start graphical server on user's current tty if not already running.
if [ -z "$DISPLAY" ] && [ "$XDG_VTNR" -eq 1 ] && [ -z "$TMUX" ]; then
  exec startx "$XINITRC"
fi
