[
  {
    "context": "",
    "bindings": {
      "ctrl-escape": "workspace::CloseAllDocks"
      // "alt-n": ["task::Spawn", { "task_name": "Notes", "reveal_target": "center" }]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "f1": "debugger::StepOut",
      "f3": "debugger::StepOver",
      "f2": "debugger::StepInto"
    }
  },

  {
    "context": "Editor && !BufferSearchBar",
    "bindings": {
      "ctrl-z": "workspace::ToggleZoom",
      "ctrl-enter": "tab_switcher::ToggleAll"
    }
  },
  {
    "context": "(!BufferSearchBar > Editor || !ProjectSearchBar > Editor) && vim_mode == visual",
    "bindings": {
      "s": "vim::HelixSelectRegex"
    }
  },

  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "alt-;": "editor::UnwrapSyntaxNode",
      "space n": "vim::SelectLargerSyntaxNode",
      "space p": "vim::SelectSmallerSyntaxNode"
    }
  },

  {
    "context": "vim_mode == visual || vim_mode == normal || vim_mode == helix_normal",
    "bindings": {
      "ctrl-e": ["workspace::SendKeystrokes", "ctrl-e ctrl-e"],
      "ctrl-y": ["workspace::SendKeystrokes", "ctrl-y ctrl-y"]
    }
  },

  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "s": "vim::PushSneak",
      "S": "vim::PushSneakBackward",
      "Y": ["workspace::SendKeystrokes", "y $"],
      "alt-%": ["workspace::SendKeystrokes", "V %"],
      "alt-x": ["workspace::SendKeystrokes", "V j"],
      "shift-x": ["workspace::SendKeystrokes", "V k"],
      "space g d": "editor::GoToDefinitionSplit"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "alt-l": "vim::SelectNext",
      "alt-h": "vim::SelectPrevious",
      "alt-j": "editor::AddSelectionBelow",
      "alt-k": "editor::AddSelectionAbove"
    }
  },
  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      "space l": ["editor::SelectNext", { "replace_newest": true }],
      "space h": ["editor::SelectPrevious", { "replace_newest": true }]
    }
  },

  {
    "context": "vim_mode == visual",
    "bindings": {
      "alt-x": ["workspace::SendKeystrokes", "j"],
      "shift-x": ["workspace::SendKeystrokes", "k"],
      "alt-s": "vim::PushAddSurrounds"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "q": "vim::AnyQuotes",
      "b": "vim::AnyBrackets"
    }
  },
  {
    "context": "DebugPanel",
    "bindings": {
      "ctrl-shift-r": "debugger::RerunSession"
    }
  },

  {
    "context": "Terminal",
    "bindings": {
      "ctrl-shift-k": "terminal::ScrollLineUp",
      "ctrl-shift-j": "terminal::ScrollLineDown",
      "alt-k": "terminal::ScrollPageUp",
      "alt-j": "terminal::ScrollPageDown"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "alt-s": "vim::PushAddSurrounds"
    }
  }
]
